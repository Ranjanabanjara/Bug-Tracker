@model Project_3.Models.TicketAttachment
@using Project_3.Helpers



<div class="row list" style="padding-left:20px">
    @Model.Description

</div>
<div class="row">
    <div class="col-md-12"><a href="@Url.Content(Model.MediaUrl)" target="_blank"><img style="width:40px" src="@IconHelper.GetIcon(Model.MediaUrl)"> @Model.MediaUrl.Split('/')[2].Split('_')[0]</a></div>
</div>
<div class="row">

    @using (Html.BeginForm("Delete", "TicketAttachments", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.Hidden("attachId", Model.Id)
        @Html.Hidden("TicketId", Model.Ticket.Id)

        <div class="col-md-12 text-center">
            <h6 class="text-danger">Are you sure you want to delete this comment?</h6>
            <button type="submit" class="btn btn-danger">DELETE</button>   <span><button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>  </span>

        </div>

    }

</div>












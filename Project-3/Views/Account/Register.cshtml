@model Project_3.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
    Layout = null;
}

<!doctype html>
<html class="fixed">
<head>

    <!-- Basic -->
    <meta charset="UTF-8">

    <!-- Mobile Metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />

    <link rel="shortcut icon" href="~/Images/favicon.jpg" />
    <!-- Web Fonts  -->
    <link href="//fonts.googleapis.com/css?family=Open+Sans:300,400,600,700,800|Shadows+Into+Light" rel="stylesheet" type="text/css">

    <!-- Vendor CSS -->
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
    <link href="~/Content/magnific-popup.css" rel="stylesheet" />
    <link href="~/Content/datepicker3.css" rel="stylesheet" />


    <!-- Theme CSS -->

    <link href="~/Content/theme.css" rel="stylesheet" />

    <!-- Skin CSS -->
    <link href="~/Content/default.css" rel="stylesheet" />

    <!-- Theme Custom CSS -->

    <link href="~/Content/theme-custom.css" rel="stylesheet" />

    <!-- Head Libs -->

    <script src="~/Scripts/modernizr.js"></script>

</head>
<body>
    <!-- start: page -->
    <div class="container-fluid register" style="background-image: url(/Images/register.jpg)">
        <section class="body-sign">
            <div class="center-sign">


                <div class="panel1">
                    <div class="panel-heading bg-tertiary">
                        tHe BuG tRAcKEr
                    </div>
                    
                    <div class="panel-body">
                        <p class="comment text-center">**New User Registration Form**</p>
                        <div class="row" style="padding:10px 40px 30px 40px">
                            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" , enctype = "Multipart/form-data"}))
                            {
                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary("", new { @class = "text-danger" })
                                <div class="form-group mb-lg">
                                    @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control input-lg", placeholder = "Firstname" })

                                </div>
                                <div class="form-group mb-lg">
                                    @Html.TextBoxFor(m => m.LastName, new { @class = "form-control input-lg", placeholder = "Lastname" })

                                </div>
                                <div class="form-group mb-lg">
                                    @Html.TextBoxFor(m => m.DisplayName, new { @class = "form-control input-lg", placeholder = "Displayname" })

                                </div>

                                <div class="form-group mb-lg">
                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control input-lg", placeholder = "Email" })

                                </div>


                                <div class="form-group mb-none">
                                    <div class="row">
                                        <div class="col-sm-6 mb-lg">
                                            @Html.PasswordFor(m => m.Password, new { @class = "form-control input-lg", placeholder = "Password" })

                                        </div>
                                        <div class="col-sm-6 mb-lg">
                                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control input-lg", placeholder = "Confirm Password" })
                                        </div>
                                    </div>
                                </div>
                                <div class="row text-center">
                                    <p class="comment text-left"><i class="fa fa-user"><span>Upload a Profile Picture</span></i></p>
                                    @Html.TextBox("Avatar", null, new { type ="file"})

                                </div>
                                
                                <div class="row text-center" style="padding:10px">
                                    <div class="col-md-12">
                                        <button type="submit" class="btn btn-facebook">**sIgN Up**</button>
                                    </div>
                                </div>
                            }

                            <span class="mt-lg mb-lg line-thru text-center">
                                <span>OR</span>
                            </span>

                            <div class="mb-xs text-center">
                                <span class="comment">Already have an Account?</span><span><span>@Html.ActionLink("**SIgN iN**", "Login")</span></span>
                            </div>
                        </div>

                    </div>

                </div>

                    <p class="text-center text-muted mt-md mb-md">&copy; Copyright 2019. Made with all Regards!
            </div>
        </section>
    </div>
        <!-- end: page -->
        <!-- Vendor -->
        <script src="~/Scripts/jquery.js"></script>
        <script src="~/Scripts/jquery.browser.mobile.js"></script>
        <script src="~/Scripts/bootstrap.js"></script>
        <script src="~/Scripts/nanoscroller.js"></script>
        <script src="~/Scripts/bootstrap-datepicker.js"></script>
        <script src="~/Scripts/magnific-popup.js"></script>
        <script src="~/Scripts/jquery.placeholder.js"></script>


        <!-- Theme Base, Components and Settings -->

        <script src="~/Scripts/theme.js"></script>

        <!-- Theme Custom -->

        <script src="~/Scripts/theme.custom.js"></script>

        <!-- Theme Initialization Files -->

        <script src="~/Scripts/theme.init.js"></script>

        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")

        }

</body>
</html>




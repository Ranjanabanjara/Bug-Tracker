@model Project_3.Models.TicketAttachment
   
 <div class="row" style="padding:20px">

            @using (Html.BeginForm("Edit", "TicketAttachments", FormMethod.Post, new { style = "width:90%" }))
            {
                @Html.AntiForgeryToken()

                 <div class="form-horizontal">
                     @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                     @Html.Hidden("attachId", Model.Id)

                     <div class="form-group">
            
                         <div class="col-md-12">
                             @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                             @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                         </div>
                     </div>

                     <div class="form-group">
                         <div class="col-md-offset-4 col-md-4">
                             <button type="submit" class="btn btn-danger">Save</button>   <span><button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>  </span>
                         </div>
                     </div>
                 </div>
            }
        

    </div>



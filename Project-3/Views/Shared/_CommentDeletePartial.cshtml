@model Project_3.Models.TicketComment

    <div class="row">

        @using (Html.BeginForm("Delete", "TicketComments", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.Hidden("commentId", Model.Id)
            @Html.Hidden("TicketId", Model.Ticket.Id)
            <div class="col-md-12 text-center">
                <h6 class="text-danger">Are you sure you want to delete this comment?</h6>
                <button type="submit" class="btn btn-danger">DELETE</button>   <span><button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>  </span>

            </div>

        }

    </div>
